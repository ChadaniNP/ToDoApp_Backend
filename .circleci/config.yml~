version: 2.1

jobs:
  test:
    docker:
      - image: cimg/python:3.11
      # Use Python 3.11
    steps:
      - checkout
      - run:
          name: Install dependencies
          command: |
            python -m pip install --upgrade pip
            pip install -r requirements.txt
      - run:
          name: Run tests
          command: pytest

workflows:
  version: 2
  test_and_deploy:
    jobs:
      - test
